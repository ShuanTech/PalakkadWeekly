<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        fancy:cardCornerRadius="4.0dip">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="4.0dip"
                android:layout_marginLeft="4.0dip"
                android:layout_marginTop="8.0dip"
                android:gravity="center_horizontal"
                android:text="REGISTRATION"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20.0dip"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@id/text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="30.0dip"
                android:orientation="vertical">

                <com.shuan.palakkadweekly.edittext.MaterialEditText
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="20.0sp"
                    android:textStyle="bold"
                    fancy:met_baseColor="#ff000000"
                    fancy:met_floatingLabel="highlight"
                    fancy:met_primaryColor="?colorAccent"
                    fancy:met_singleLineEllipsis="true" />

                <com.shuan.palakkadweekly.edittext.MaterialEditText
                    android:id="@+id/email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Id"
                    android:inputType="textEmailAddress"
                    android:maxLength="100"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="20.0sp"
                    android:textStyle="bold"
                    fancy:met_baseColor="#ff000000"
                    fancy:met_floatingLabel="highlight"
                    fancy:met_primaryColor="?colorAccent"
                    fancy:met_singleLineEllipsis="true" />

                <com.shuan.palakkadweekly.edittext.MaterialEditText
                    android:id="@+id/password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="50"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="20.0sp"
                    android:textStyle="bold"
                    fancy:met_baseColor="#ff000000"
                    fancy:met_floatingLabel="highlight"
                    fancy:met_primaryColor="?colorAccent"
                    fancy:met_singleLineEllipsis="true" />

                <com.shuan.palakkadweekly.edittext.MaterialEditText
                    android:id="@+id/phone_number"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="20.0sp"
                    android:textStyle="bold"
                    fancy:met_baseColor="#ff000000"
                    fancy:met_floatingLabel="highlight"
                    fancy:met_primaryColor="?colorAccent"
                    fancy:met_singleLineEllipsis="true" />

                <com.shuan.palakkadweekly.edittext.MaterialEditText
                    android:id="@+id/address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:inputType="textPersonName"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="20.0sp"
                    android:textStyle="bold"
                    fancy:met_baseColor="#ff000000"
                    fancy:met_floatingLabel="highlight"
                    fancy:met_maxCharacters="200"
                    fancy:met_primaryColor="?colorAccent"
                    fancy:met_singleLineEllipsis="true" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_margin="@dimen/activity_horizontal_margin">

                <com.shuan.palakkadweekly.fancyButton.FancyButton
                    android:id="@+id/btn_register"
                    android:layout_width="120.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24.0dip"
                    fancy:fb_defaultColor="@color/btnColor"
                    fancy:fb_focusColor="@color/colorAccent"
                    fancy:fb_radius="8.0dip"
                    fancy:fb_text="SUBMIT"
                    fancy:fb_textColor="#ffffffff" />

                <com.shuan.palakkadweekly.fancyButton.FancyButton
                    android:id="@+id/btn_clear"
                    android:layout_width="120.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_toRightOf="@id/btn_register"
                    fancy:fb_defaultColor="@color/btnColor"
                    fancy:fb_focusColor="@color/btnColor"
                    fancy:fb_radius="8.0dip"
                    fancy:fb_text="CLEAR"
                    fancy:fb_textColor="#ffffffff" />
            </RelativeLayout>
        </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>